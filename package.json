{
  "name": "hakoview",
  "displayName": "Hako View",
  "description": "A lightweight Voxel model visualizer for VS Code.",
  "version": "0.2.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gen4438/HakoView"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "hakoview.lesViewer",
        "displayName": "LES Voxel Viewer",
        "selector": [
          {
            "filenamePattern": "*.leS"
          },
          {
            "filenamePattern": "*.leS.gz"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "hakoview.openAsText",
        "title": "Reopen as Text",
        "category": "Hakoview"
      },
      {
        "command": "hakoview.openFromEditor",
        "title": "Open in Voxel Viewer",
        "category": "Hakoview",
        "icon": "images/icon.svg"
      },
      {
        "command": "hakoview.openVoxelViewer",
        "title": "Open Voxel Viewer",
        "category": "Hakoview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "hakoview.openFromEditor",
          "when": "resourceExtname == .leS || resourceExtname == .gz",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "hakoview.openAsText",
          "when": "activeCustomEditorId == hakoview.lesViewer"
        },
        {
          "command": "hakoview.openFromEditor",
          "when": "resourceExtname == .leS || resourceExtname == .gz"
        }
      ]
    },
    "configuration": {
      "title": "Hako View",
      "properties": {
        "hakoview.defaultColormap": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {
            "0": "#FFFFFF",
            "1": "#0000FF",
            "2": "#FF0000",
            "3": "#FFFF00",
            "4": "#00FF00",
            "5": "#FF00FF",
            "6": "#1F77B4",
            "7": "#FF7F0E",
            "8": "#2CA02C",
            "9": "#D62728",
            "10": "#9467BD",
            "11": "#8C564B",
            "12": "#E377C2",
            "13": "#7F7F7F",
            "14": "#BCBD22",
            "15": "#17BECF"
          },
          "description": "Default colormap for voxel values. Format: { \"0\": \"#hexcolor\", \"1\": \"#hexcolor\", ... }."
        },
        "hakoview.devicePixelRatio": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 0.5,
          "maximum": 4,
          "description": "Device Pixel Ratio (DPR) for rendering. Higher values improve quality but reduce performance. Set to null for auto-detection (recommended). Typical values: 1.0 (standard), 2.0 (high-DPI), 0.5-1.0 (low-spec machines)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build:prod",
    "build": "pnpm run check-types && pnpm run lint && node esbuild.js && node esbuild.webview.js",
    "build:prod": "pnpm run check-types && pnpm run lint && node esbuild.js --production && node esbuild.webview.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:webview": "node esbuild.webview.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run build && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"webview/src/**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"webview/src/**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "test": "vscode-test",
    "install:webview": "cd webview && pnpm install",
    "prepare": "husky",
    "vsix": "pnpm run build:prod && vsce package --out dist/hakoview.vsix --allow-missing-repository",
    "publish:marketplace": "vsce publish --allow-missing-repository",
    "publish:openvsx": "ovsx publish --allow-missing-repository",
    "publish": "pnpm run vsix && pnpm run publish:marketplace && pnpm run publish:openvsx",
    "release:patch": "npm version patch && git push origin main && git push --tags",
    "release:minor": "npm version minor && git push origin main && git push --tags",
    "release:major": "npm version major && git push origin main && git push --tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.9",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
